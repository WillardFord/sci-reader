{
    "manifest_version": 3,
    "name": "Text Sender",
    "version": "1.0",
    "description": "Send selected text to a Python script.",
    "permissions": [
      "contextMenus",
      "activeTab"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://*.example.com/*"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }
  