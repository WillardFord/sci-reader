{
    "manifest_version": 3,
    "name": "SciReader",
    "version": "1.0",
    "description": "Send selected text to a Python script.",
    "permissions": [
      "contextMenus",
      "activeTab",
      "sidePanel",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "js": [ "./scripts/sidepanel.js"],
        "css": ["./css/sidepanel.css"],
        "matches": [ "<all_urls>"]
      }
    ],
  "side_panel": {
    "default_path": "sidepanel.html"
  }
}
  